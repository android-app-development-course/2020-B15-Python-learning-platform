<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="64dp"
        android:src="@drawable/img_cover"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/textView1"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginTop="68dp"
        android:background="@drawable/ic_person_outline_black_24dp"
        android:gravity="center"

        app:layout_constraintEnd_toStartOf="@+id/login_email"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <EditText
        android:id="@+id/login_email"
        android:layout_width="250dp"
        android:layout_height="48dp"
        android:layout_marginTop="64dp"
        android:hint="请输入账号"
        android:inputType="textEmailAddress"
        android:maxLength="128"
        android:selectAllOnFocus="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textView1"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ImageView
        android:id="@+id/textView2"
        android:layout_width="35dp"
        android:layout_height="32dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/ic_lock_outline_black_24dp"
        android:gravity="center"
        android:text="密码："
        android:textSize="20dp"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@+id/textView1"
        app:layout_constraintTop_toBottomOf="@+id/textView1" />

    <EditText
        android:id="@+id/login_pwd"
        android:layout_width="250dp"
        android:layout_height="48dp"

        android:layout_marginTop="3dp"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:maxLength="32"
        android:selectAllOnFocus="true"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/login_email" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="150dp"
        android:layout_height="38dp"
        android:layout_marginTop="55dp"
        android:background="@drawable/shape6"
        android:enabled="true"
        android:text="登录"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_pwd" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="150dp"
        android:layout_height="38dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/shape6"
        android:enabled="true"
        android:text="注册"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_login" />

</androidx.constraintlayout.widget.ConstraintLayout>