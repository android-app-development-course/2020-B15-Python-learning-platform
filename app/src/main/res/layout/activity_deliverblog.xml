<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.blog.DeliverActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/deliver_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/toolbarBg"
        custom:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/deliver_btn_return"
            android:layout_width="64dp"
            android:layout_height="33dp"
            android:textSize="18sp"
            android:text="取消"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_gravity="left"
            android:layout_marginRight="20dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="发布博客"
            android:textColor="#000000"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="16dp" />


        <TextView
            android:id="@+id/deliver_btn_publish"
            android:layout_width="64dp"
            android:layout_height="33dp"
            android:text="发表"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:background="@color/theme_orange"
            android:textColor="@color/white" />
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="5dp"
        android:text="标题:"
        android:textSize="24sp" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />


    <EditText
        android:id="@+id/publish_title"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="@null"
        android:ems="10"
        android:hint="请在此处输入标题"
        android:inputType="textPersonName"
        android:paddingStart="5dp"
        android:textCursorDrawable="@null"
        android:textSize="24sp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/divider3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:paddingStart="5dp"
            android:text="正文:"
            android:textSize="24sp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@android:color/black">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/action_undo"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/undo"
                    android:contentDescription="@null" />

                <ImageButton
                    android:id="@+id/action_redo"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/redo"
                    android:contentDescription="@null" />

                <ImageButton
                    android:id="@+id/action_txt_color"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/txt_color"
                    android:contentDescription="@null" />

                <ImageButton
                    android:id="@+id/action_bold"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/bold"
                    android:contentDescription="@null" />

                <ImageButton
                    android:id="@+id/action_italic"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/italic"
                    android:contentDescription="@null" />

                <ImageButton
                    android:id="@+id/action_underline"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/underline"
                    android:contentDescription="@null" />

                <ImageButton
                    android:id="@+id/action_insert_image"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/insert_image"
                    android:contentDescription="@null" />

                <ImageButton
                    android:id="@+id/action_heading1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/h1"
                    android:contentDescription="@null" />

                <ImageButton
                    android:id="@+id/action_heading2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/h2"
                    android:contentDescription="@null" />

                <ImageButton
                    android:id="@+id/action_heading3"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/h3"
                    android:contentDescription="@null" />

                <ImageButton
                    android:id="@+id/action_heading4"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/h4"
                    android:contentDescription="@null" />

                <ImageButton
                    android:id="@+id/action_heading5"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/h5"
                    android:contentDescription="@null" />

                <ImageButton
                    android:id="@+id/action_heading6"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/h6"
                    android:contentDescription="@null" />


                <ImageButton
                    android:id="@+id/action_align_left"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/justify_left"
                    android:contentDescription="@null" />

                <ImageButton
                    android:id="@+id/action_align_center"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/justify_center"
                    android:contentDescription="@null" />

                <ImageButton
                    android:id="@+id/action_align_right"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/justify_right"
                    android:contentDescription="@null" />

                <ImageButton
                    android:id="@+id/action_insert_bullets"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/bullets"
                    android:contentDescription="@null" />

                <ImageButton
                    android:id="@+id/action_insert_numbers"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/numbers"
                    android:contentDescription="@null" />

                <ImageButton
                    android:id="@+id/action_blockquote"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/blockquote"
                    android:contentDescription="@null" />

                <!--                <ImageButton-->
                <!--                    android:id="@+id/action_insert_audio"-->
                <!--                    android:layout_width="48dp"-->
                <!--                    android:layout_height="48dp"-->
                <!--                    android:contentDescription="@null"-->
                <!--                    android:background="@drawable/music" />-->

                <!--                <ImageButton-->
                <!--                    android:id="@+id/action_insert_video"-->
                <!--                    android:layout_width="48dp"-->
                <!--                    android:layout_height="48dp"-->
                <!--                    android:contentDescription="@null"-->
                <!--                    android:background="@drawable/video" />-->

                <!--                <ImageButton-->
                <!--                    android:id="@+id/action_insert_youtube"-->
                <!--                    android:layout_width="48dp"-->
                <!--                    android:layout_height="48dp"-->
                <!--                    android:contentDescription="@null"-->
                <!--                    android:background="@drawable/youtube" />-->

                <!--                <ImageButton-->
                <!--                    android:id="@+id/action_insert_link"-->
                <!--                    android:layout_width="48dp"-->
                <!--                    android:layout_height="48dp"-->
                <!--                    android:contentDescription="@null"-->
                <!--                    android:background="@drawable/insert_link" />-->

            </LinearLayout>
        </HorizontalScrollView>

        <jp.wasabeef.richeditor.RichEditor
            android:id="@+id/editor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>


</LinearLayout>